@model ST10102524_APPR6312_POE_PART_2.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer Details";
}

<h2>Volunteer Details</h2>

<div>
    <h4>Volunteer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Registration Date
        </dt>
        <dd class="col-sm-10">
            @Model.RegistrationDate.ToShortDateString()
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.VolunteerID" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
